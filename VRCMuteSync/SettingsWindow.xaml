<ui:FluentWindow x:Class="VRCMuteSync.SettingsWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Height="350" Width="400"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="VRCMuteSync 設定" />

        <StackPanel Grid.Row="1" Margin="24">

            <ui:CardControl Icon="Network24" Header="OSC 受信ポート" Margin="0,0,0,16">
                <ui:TextBox x:Name="PortTextBox" Width="120" PlaceholderText="例: 9001" />
            </ui:CardControl>

            <ui:CardControl Icon="Keyboard24" Header="Discord ミュート切替キー" Margin="0,0,0,8">
                <StackPanel>
                    <ui:TextBox x:Name="HotkeyTextBox" 
                                IsReadOnly="True" 
                                PreviewKeyDown="HotkeyTextBox_PreviewKeyDown" 
                                PlaceholderText="ここをクリックしてキーを入力"
                                Cursor="Hand" Margin="0,0,0,8"/>
                    <TextBlock Text="※Escキーでクリア / F13～F24などの特殊キー推奨" 
                               Foreground="Gray" 
                               FontSize="12"/>
                </StackPanel>
            </ui:CardControl>

            <Grid Margin="0,24,0,0">
                <ui:Button Content="設定を保存して閉じる" 
                           Click="Save_Click" 
                           Appearance="Primary" 
                           Icon="Save24"
                           HorizontalAlignment="Right" Width="180" Height="36"/>
            </Grid>

        </StackPanel>
    </Grid>
</ui:FluentWindow>