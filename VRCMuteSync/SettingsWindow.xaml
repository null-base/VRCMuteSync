<ui:FluentWindow x:Class="VRCMuteSync.SettingsWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:p="clr-namespace:VRCMuteSync.Properties" Title="{x:Static p:Resources.Win_Title}" Height="430" Width="420"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="{x:Static p:Resources.Win_Title}" />

        <StackPanel Grid.Row="1" Margin="24">
            <ui:CardControl Icon="Network24" Header="{x:Static p:Resources.Win_Port}" Margin="0,0,0,16">
                <ui:TextBox x:Name="PortTextBox" Width="120" PlaceholderText="ex: 9001" />
            </ui:CardControl>

            <ui:CardControl Icon="Keyboard24" Header="{x:Static p:Resources.Win_Hotkey}" Margin="0,0,0,8">
                <StackPanel>
                    <ui:TextBox x:Name="HotkeyTextBox" 
                                IsReadOnly="True" 
                                PreviewKeyDown="HotkeyTextBox_PreviewKeyDown" 
                                PlaceholderText="{x:Static p:Resources.Win_Placeholder}"
                                Cursor="Hand" Margin="0,0,0,8"/>
                    <TextBlock Text="{x:Static p:Resources.Win_Hint}" 
                               Foreground="Gray" 
                               FontSize="12"/>
                </StackPanel>
            </ui:CardControl>

            <CheckBox x:Name="StartupCheckBox" 
                      Content="{x:Static p:Resources.Win_Startup}"
                      Margin="0,8,0,0"/>

            <Grid Margin="0,24,0,0">
                <ui:Button Content="{x:Static p:Resources.Win_Save}" 
                           Click="Save_Click" 
                           Appearance="Primary" 
                           Icon="Save24"
                           HorizontalAlignment="Right" MinWidth="180" Height="36"/>
            </Grid>


        </StackPanel>
    </Grid>
</ui:FluentWindow>